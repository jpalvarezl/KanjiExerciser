<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.study.kanjiexerciser.main.MainActivity">

   <ImageView
       android:id="@+id/svg_kanji_image"
       android:layout_marginTop="50dp"
       android:layout_centerHorizontal="true"
       android:layout_width="250dp"
       android:layout_height="250dp"
       />

   <android.support.design.widget.TextInputLayout
       android:id="@+id/kanji_to_render_layout"
       android:layout_below="@id/svg_kanji_image"
       android:layout_width="match_parent"
       android:layout_margin="16dp"
       android:layout_height="56dp">
      <EditText
          android:id="@+id/kanji_to_render"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Enter a single kanji"/>
   </android.support.design.widget.TextInputLayout>
   <Button
       android:id="@+id/render_button"
       android:layout_below="@id/kanji_to_render_layout"
       android:layout_width="match_parent"
       android:layout_margin="16dp"
       android:layout_height="56dp"
       android:text="Render"/>
</RelativeLayout>
